{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "nft",
	"patterns": [
		{
			"include": "#statements"
		}
	],
	"repository": {
		"statements": {
			"patterns": [
				{
					"include": "#var-single-variable"
				}
			]
		},
		"block": {
			"name": "meta.block.nft",
			"begin": "\\{",
			"beginCaptures": [{
				"name": "punctuation.definition.block.nft"
			}],
			"end": "\\}",
			"endCaptures": [{
				"name": "punctuation.definition.block.nft"
			}],
			"patterns": [{
				"include": "#strings"
			}]
		},
		"var-single-variable": {
			"patterns": [{
				"include": "#var-single-variable-type-annotation"
			}]
		},
		"var-single-variable-type-annotation": {
			"patterns": [
				{
					"include": "#strings"
				},
				{
					"include": "#comment"
				}
			]
		},
		"strings": {
			"patterns": [{
					"name": "keyword.control.nft",
					"match": "\\b(define|table|flush|chain|type|ct|iif|ip|ip6|tcp|accept)\\b"
			}]
		},
		"comment": {
			"name": "comment.nft",
			"begin": "#",
			"end": ".*",
			"patterns": [{
				"name": "comment.line.nft"
			}]
		}
	},
	"scopeName": "nft"
}