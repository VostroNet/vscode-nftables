{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "nft",
	"patterns": [
		{
			"include": "#statements"
		}
	],
	"repository": {
		"statements": {
			"patterns": [
				{
					"include": "#var-single-variable"
				}
			]
		},
		"var-single-variable": {
			"patterns": [{
				"include": "#var-single-variable-type-annotation"
			}]
		},
		"var-single-variable-type-annotation": {
			"patterns": [
				{
					"include": "#declaration"
				},
				{
					"include": "#addressFamily" 
				},
				{
					"include": "#ruleset"
				},
				{
					"include": "#table"
				},
				{
					"include": "#chain"
				},
				{
					"include": "#rule"
				},
				{
					"include": "#set"
				},
				{
					"include": "#map"
				},
				{
					"include": "#flowtable"
				},
				{
					"include": "#statefulObj"
				},
				{
					"include": "#comment"
				}
			]
		},
		"declaration": {
			"patterns": [{
					"name": "keyword.control.nft",
					"match": "\\b(define)\\b"
			}]
		},
		"addressFamily": {
			"patterns": [{
					"name": "keyword.control.nft",
					"match": "\\b(ip|ip6|inet|arp|bridge|netdev)\\b"
			}]
		},
		"ruleset": {
			"patterns": [{
					"name": "keyword.control.nft",
					"match": "\\b(ruleset|list|flush|export)\\b"
			}]
		},
		"table": {
			"patterns": [{
					"name": "keyword.control.nft",
					"match": "\\b(table|create|add|flags)\\b"
			}]
		},
		"chain": {
			"patterns": [{
					"name": "keyword.control.nft",
					"match": "\\b(chain|add|create|delete|rename|list|flush)\\b"
			}]
		},
		"rule": {
			"patterns": [{
					"name": "keyword.control.nft",
					"match": "\\b(rule|add|insert|replace|delete)\\b"
			}]
		},
		"set": {
			"patterns": [{
					"name": "keyword.control.nft",
					"match": "\\b(set|add|delete|list|flush|add element|delete element)\\b"
			}]
		},
		"map": {
			"patterns": [{
					"name": "keyword.control.nft",
					"match": "\\b(map|add|delete|list|flush|add element|delete element)\\b"
			}]
		},
		"flowtable": {
			"patterns": [{
					"name": "keyword.control.nft",
					"match": "\\b(flowtable|add|delete|list|reset)\\b"
			}]
		},
		"statefulObj": {
			"patterns": [{
					"name": "keyword.control.nft",
					"match": "\\b(ct|counter|quota)\\b"
			}]
		},
		"comment": {
			"name": "comment.nft",
			"begin": "#",
			"end": ".*",
			"patterns": [{
				"name": "comment.line.nft"
			}]
		}
	},
	"scopeName": "nft"
}